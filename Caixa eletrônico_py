programa
saldo = 1000.00
while True:
    print("===Caixa Eletrônico===\n")
    print("1 - Consultar Saldo\n")
    print("2 - Sacar\n")
    print("3 - Sair\n")
    opcao = int(input("Escolha Uma Opção: "))

    if opcao == 1:
        print("\nSeu saldo atual é: R$", saldo, "\n")
    elif opcao == 3:
        print("\nObrigado Por Utilizar Nossos Serviços\n")
        break
    elif opcao > 3 or opcao <= 0:
        print("\nOpção Inválida - Por Favor Digite Novamente\n")
    elif opcao == 2:
        saque = float(input("\nDigite o valor desejado: R$ "))
        if saque > saldo:
            print("\nSaldo Insuficiente\n")
        elif saque <= 0:
            print("\nValor Inválido - Digite um Valor Maior que 0\n")
        else:
            saldo = saldo - saque
            print("\nSaque Realizado Com Sucesso\n")
            print("\nNovo Saldo: R$", saldo, "\n")
		inteiro opcao
		real saque

		enquanto(verdadeiro) {
